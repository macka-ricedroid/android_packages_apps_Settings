<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="@dimen/card_margin_start_aqua"
    android:layout_marginEnd="@dimen/card_margin_end_aqua"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="22dp">

        <com.rice.utils.aboutWallpaperView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:elevation="0dp"
            android:contentDescription="@null"
            android:orientation="horizontal" />

    <ImageView
        android:id="@android:id/icon"
        android:padding="1.5dp" 
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
	android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="52dp"
        app:layout_constraintStart_toEndOf="@android:id/icon">

    <LinearLayout
	android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">
        
        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/op_control_text_color_primary_inverse"
            android:background="@drawable/homepage_text_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:maxLength="12"
            android:maxLines="1"
            style="@style/op_control_text_style_h6"
            android:textSize="18sp" />

        <TextView
            android:id="@android:id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxLines="1"
            android:textColor="@color/op_control_text_color_secondary"
            style="@style/op_control_text_style_body1" />
            
    <com.google.android.material.card.MaterialCardView
        android:layout_width="68dp"
        android:layout_height="128dp"
        android:layout_marginBottom="-30dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end|center_vertical"
        android:gravity="end|center_vertical"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/op_control_text_color_primary_inverse"
        app:strokeColor="@color/op_control_text_color_primary"
        app:strokeWidth="1dp">

       <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center"
            android:tint="@color/op_control_text_color_primary"
            android:src="@drawable/ricelogo" />

   	 	</com.google.android.material.card.MaterialCardView>
   	 </LinearLayout>
       </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
